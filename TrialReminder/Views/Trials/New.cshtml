@{
}

<form method="post" action="create">
    <div class="form-group">
        <label asp-for="ServiceName"></label>
        <input class="form-control" asp-for="ServiceName" type="text" />
        <span asp-validation-for="ServiceName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url"></label>
        <input class="form-control" asp-for="Url" type="url" />
        <span asp-validation-for="Url"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input class="form-control" asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input class="form-control" asp-for="EndDate" type="date" />
        <span asp-validation-for="EndDate"></span>
    </div>
    <button class="btn btn-success" type="submit">Add This Service</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}